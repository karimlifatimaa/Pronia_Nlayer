

@model List<Category>
@{
    int count = 0;
}
<div class="container">
    <h1>

        Category
        <a class="btn btn-primary" asp-action="Create" asp-controller="Category">Create</a>

    </h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id=@item.Id>Delete</a>
                        <a class="btn btn-info" asp-action="Update" asp-controller="Category" asp-route-id=@item.Id>Update</a>
                    </td>

                </tr>
            }



        </tbody>
    </table>
</div>
